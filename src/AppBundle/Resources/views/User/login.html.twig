{% extends 'base.html.twig' %}
{% block body %}
           <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 well" > 
{#    <div class="col-sm-6 col-xs-12 col-lg-5 well span12 pagination-centered">#}
         <legend>Panel logowania</legend>
         
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
       
        <form action="{{ path('login') }}" method="post">
            <div class="form-group">
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Username or email"/>
            </div>
            <div class="form-group">
                <input class="form-control" type="password" id="password" name="_password" placeholder="Password"/>
            </div>

            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}

            <button class="btn btn-info col-xs-12" type="submit">Zaloguj siÄ™</button>
        </form>
{#    </div>#}
</div>
    </div>

{% endblock %}