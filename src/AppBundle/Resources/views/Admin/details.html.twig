{% extends "AppBundle:Blog:sidebarLayout.html.twig" %}

{% block pageTitle %}
    Edycja rejestracji | {{ parent() }}
{% endblock %}

{% block content %}

    <article class="col-md-8 contact">

        <h1>Edycja rejestracji: {{ row.name }}</h1>

        <div class="panel panel-primary">
            <div class="panel-heading">
                Szczegóły rejestracji
                <a href="{{ path('blog_admin_update', {'id': row.id}) }}" class="btn btn-warning btn-sm pull-right panel-btn">Edytuj</a>
                <a href="{{ path('blog_admin_listing') }}" class="btn btn-info btn-sm pull-right panel-btn">Powrót</a>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover"> 
                    <tr> 
                        <th>#</th>
                        <td>{{row.id}}</td> 
                    </tr> 
                    <tr> 
                        <th>imię i nazwisko</th>
                        <td>{{row.name}}</td> 
                    </tr> 
                    <tr> 
                        <th>email</th>
                        <td>{{row.email}}</td> 
                    </tr>
                    <tr> 
                        <th>country</th>
                        <td>{{row.country}}</td> 
                    </tr> 
                    <tr> 
                        <th>urodziny</th>
                        <td>{{row.birthday|date('Y.m.d')}}</td> 
                    </tr>
                    <tr> 
                        <th>inwestycje</th>
                        <td>{{row.invest|join(', ')}}</td> 
                    </tr
                                        <tr> 
                        <th>komentarz</th>
                        <td>{{row.comments }}</td> 
                    </tr>
                </table>
            </div>
        </div>

    </article>

{% endblock %}